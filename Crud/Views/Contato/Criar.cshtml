@model ContatoModel
@{
    ViewData["Title"] = "Cadastro de contato";
}

<div class="text-center">

    <h1> Cadastrar contato</h1>
</div>

<form asp-controller="Contato" asp-action="Criar" method="post">

    <div class="form-group mb-2">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Digite o nome do contato">

    </div>

    <div class="form-group mb-2">
        <label for="email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o email do contato">
    </div>

    <div class="form-group mb-2">
        <label for="telefone">Telefone</label>
        <input type="text" asp-for="Telefone" class="form-control" placeholder="Digite o telefone do contato">
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Cadastrar</button>
    <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>
